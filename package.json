{
  "name": "mvx-transactions",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "dev:watcher": "nest start watcher --watch",
    "dev:live-updates": "nest start live-updates --watch",
    "build:live-updates": "build live-update",
    "build:watcher": "build watcher",
    "db:gen": "prisma generate",
    "db:push": "prisma db push",
    "dev": "concurrently -n 'LiveUpdates, Watcher' -c green.bold,blue.bold 'pnpm dev:live-updates' 'pnpm dev:watcher' ",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/mvx-transactions/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/mvx-transactions/test/jest-e2e.json"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@multiversx/sdk-core": "^12.13.0",
    "@multiversx/sdk-nestjs-common": "^2.1.0",
    "@multiversx/sdk-transaction-processor": "^0.1.30",
    "@multiversx/sdk-wallet": "^4.2.0",
    "@nestjs/common": "^9.4.3",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^9.4.3",
    "@nestjs/microservices": "^10.2.8",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/schedule": "^4.0.0",
    "@prisma/client": "^5.5.2",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "big-number": "^2.0.0",
    "bignumber.js": "^9.1.2",
    "concurrently": "^8.2.2",
    "ioredis": "^5.3.2",
    "nestjs-zod": "^3.0.0",
    "prisma": "^5.5.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.3",
    "@types/bignumber.js": "^5.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}